<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:orientation="vertical"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_wifi_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_focus_selector"
            android:text="Wi-Fi Scan" />

        <Button
            android:id="@+id/btn_wifi_test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:background="@drawable/button_focus_selector"
            android:text="Wi-Fi Test" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_wifi_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press 'Scan' to find Wi-Fi networks."
        android:focusable="true"
        android:background="@drawable/focusable_item_border"
        android:textColor="#FFFFFF" />

</LinearLayout>
