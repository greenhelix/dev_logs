<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#111111">

    <TableLayout
        android:id="@+id/button_table"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:stretchColumns="0,1"
        android:background="#333333"
        android:padding="2dp">

        <TableRow>
            <Button
                android:id="@+id/button_ethernet_test"
                android:background="@drawable/button_focus_selector"
                android:text="Ethernet Test"
                >
            </Button>
            <Button
                android:id="@+id/button_video_test"
                android:background="@drawable/button_focus_selector"
                android:text="Video Test" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/button_wifi_test"
                android:background="@drawable/button_focus_selector"
                android:text="Wi-Fi Test" />
            <Button
                android:id="@+id/button_bt_test"
                android:background="@drawable/button_focus_selector"
                android:text="Bluetooth Test" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/button_hdmi_test"
                android:background="@drawable/button_focus_selector"
                android:text="HDMI Test" />
            <Button
                android:id="@+id/button_usb_test"
                android:background="@drawable/button_focus_selector"
                android:text="USB Test" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/button_memory_test"
                android:background="@drawable/button_focus_selector"
                android:text="Memory Test" />
            <Button
                android:id="@+id/button_cpu_test"
                android:background="@drawable/button_focus_selector"
                android:text="CPU Test" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/button_rcu_test"
                android:background="@drawable/button_focus_selector"
                android:text="RCU Test" />
            <Button
                android:background="@drawable/button_focus_selector"
                android:text="BIST Uninstall" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/button_factory_reset_test"
                android:background="@drawable/button_focus_selector"
                android:text="Factory Reset" />
            <Button
                android:background="@drawable/button_focus_selector"
                android:text="6-2" />
        </TableRow>
        <TableRow>
            <Button
                android:background="@drawable/button_focus_selector"
                android:text="7-1" />
            <Button
                android:background="@drawable/button_focus_selector"
                android:text="7-2" />
        </TableRow>
        <TableRow>
            <Button
                android:background="@drawable/button_focus_selector"
                android:text="8-1" />
            <Button
                android:background="@drawable/button_focus_selector"
                android:text="8-2" />
        </TableRow>
        <TableRow>
            <Button
                android:background="@drawable/button_focus_selector"
                android:text="9-1" />
            <Button
                android:background="@drawable/button_focus_selector"
                android:text="9-2" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/button_uninstall"
                android:background="@drawable/button_focus_selector"
                android:text="Uninstall This App" />
            <Button
                android:id="@+id/button_auto_test"
                android:background="@drawable/button_focus_selector"
                android:text="10-2" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#222222"
        android:padding="2dp">

        <RelativeLayout
            android:id="@+id/top_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_wifi_status"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:focusable="true"
                    android:background="@drawable/focusable_item_border"
                    android:src="@drawable/ic_wifi"
                    />

                <ImageView
                    android:id="@+id/iv_bt_status"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:focusable="true"
                    android:background="@drawable/focusable_item_border"
                    android:src="@drawable/ic_bt"
                    />

                <ImageView
                    android:id="@+id/iv_ethernet_status"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:focusable="true"
                    android:background="@drawable/focusable_item_border"
                    android:src="@drawable/ic_ethernet"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/icon_container"
                android:ellipsize="end"
                android:maxLines="3"
                android:focusable="true"
                android:background="@drawable/focusable_item_border"
                android:textColor="#ffffff"
                android:textSize="10sp"
                tools:text="Model: ExampleModel FW Ver: 1.0.0 Android Ver: 12\nBuild Date: 2023-10-27\nSerial No: 1234567890ABCD" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/log_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:focusable="true"
            android:background="@drawable/focusable_scrollview_border"
            android:focusableInTouchMode="false"
            android:padding="4dp">

            <TextView
                android:id="@+id/text_log_window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="Logging Start..."
                android:textColor="#00FF00"
                android:textSize="12sp"
                android:typeface="monospace" />
        </ScrollView>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_info_container"
            android:layout_above="@id/log_scroll_view" />

    </RelativeLayout>
</LinearLayout>
