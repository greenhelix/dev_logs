<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A1A"
    android:layout_marginTop="27dp"
    android:layout_marginBottom="27dp"
    android:layout_marginStart="48dp"
    android:layout_marginEnd="48dp">

    <!-- 헤더 영역 -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- 로고/타이틀 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_dashboard_logo"
                android:contentDescription="Dashboard Logo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analytics Dashboard"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Real-time Business Insights"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 검색 버튼 -->
        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search"
            android:background="@drawable/button_background"
            android:focusable="true"
            android:contentDescription="Search"/>
    </RelativeLayout>

    <!-- 배너 이미지 -->
    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dashboard_banner"
        android:contentDescription="Dashboard Banner"/>

    <!-- 설명 텍스트 -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monitor your business performance in real-time"
        android:textSize="16sp"
        android:textColor="#CCCCCC"
        android:padding="24dp"/>

    <!-- Fragment Container (리스트 표시) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/list_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.innopia.bist.ListFragment"/>

</LinearLayout>
