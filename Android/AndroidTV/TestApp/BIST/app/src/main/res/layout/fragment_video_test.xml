<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#222222">

    <TextView
        android:id="@+id/text_video_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:background="@drawable/focusable_item_border"
        android:textColor="#FFFFFF"
        android:text="wait test start"
        />

    <Button
        android:id="@+id/btn_video_test_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_focus_selector"
        android:text="video test start"
        android:layout_marginTop="36dp"
        />

</LinearLayout>
