<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#222222"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_ether_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_focus_selector"
            android:text="Ethernet Scan"
            />

        <Button
            android:id="@+id/btn_ether_test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:background="@drawable/button_focus_selector"
            android:text="Ethernet Test"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/text_ether_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:background="@drawable/focusable_item_border"
        android:textColor="#FFFFFF"
        android:text="Press 'Scan' to find Ethernet networks."
        />

</LinearLayout>
